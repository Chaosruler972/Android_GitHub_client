<?xml version="1.0" encoding="utf-8"?>
<!-- Height must be supplied manually due to some kotlin error -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_user_repo_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/item_user_repo_created_at"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"

        android:layout_weight="2"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/item_user_repo_language"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/item_user_repo_private"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:layout_weight="0.5"
        android:gravity="top"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/item_user_goto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginEnd="10dp"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:contentDescription="@string/go_to_project_data" />
</LinearLayout>