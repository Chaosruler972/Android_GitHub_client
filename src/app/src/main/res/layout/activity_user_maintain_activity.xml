<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context="com.example.chaosruler.githubclient.activities.user_maintain_activity"

    >

    <Spinner
        android:id="@+id/delete_spinner"
        android:layout_width="@dimen/user_maintain_user_width"
        android:layout_height="@dimen/user_mtaintain_spinner_height"


        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/delete_username_textview" />

    <TextView
        android:id="@+id/delete_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_maintain_txtview_height"

        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/user_maintain_txtview_marginend"
        android:layout_marginTop="@dimen/user_mtaintain_txtview_margintop"
        android:layout_toStartOf="@+id/delete_spinner"
        android:text="@string/prompt_email" />

    <EditText
        android:id="@+id/delete_password1_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/delete_username_textview"
        android:layout_marginTop="@dimen/user_mtaintain_password_txtview_margintop"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPassword"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/delete_password1_textview"
        android:layout_width="@dimen/user_mtaintain_password_width"
        android:layout_height="@dimen/user_maintain_password_height"


        android:layout_alignBottom="@+id/delete_password1_edittext"
        android:layout_alignStart="@+id/delete_username_textview"
        android:layout_alignTop="@+id/delete_password1_edittext"
        android:layout_toStartOf="@+id/delete_password1_edittext"
        android:text="@string/prompt_password" />

    <EditText
        android:id="@+id/delete_password2_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentEnd="true"
        android:layout_below="@+id/delete_password1_edittext"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/delete_password2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBottom="@+id/delete_password2_edittext"
        android:layout_alignStart="@+id/delete_password1_textview"
        android:layout_alignTop="@+id/delete_password2_edittext"
        android:layout_toStartOf="@+id/delete_password2_edittext"
        android:text="@string/delete_verify"
        android:visibility="invisible" />

    <Button
        android:id="@+id/delete_delete"
        android:layout_width="@dimen/user_mtaintain_delete_width"
        android:layout_height="@dimen/user_maintain_delete_height"

        android:layout_alignEnd="@+id/delete_spinner"
        android:layout_alignParentBottom="true"


        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/activity_users_mehak"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/delete_change_password"
        android:layout_width="@dimen/user_maintain_change_width"
        android:layout_height="@dimen/user_maintain_change_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:shadowColor="#A8A8A8"

        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/activity_user_shane_sisma"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/delete_spinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete_send_changes_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"


        android:layout_above="@+id/delete_delete"
        android:layout_toEndOf="@+id/delete_change_password"
        android:layout_toStartOf="@+id/delete_delete"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/delete_send_changes"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="invisible" />
</RelativeLayout>

